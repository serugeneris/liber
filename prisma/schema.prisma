generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./liber.db"
}

model User {
    userId    Int       @id @default(autoincrement())
    name      String
    email     String    @unique
    password  String
    rentals   Rental[]
    comments  Comment[]
}

model Book {
    bookId          Int       @id @default(autoincrement())
    title           String
    author          String
    description     String
    publicationYear Int?
    rentals         Rental[]
    comments        Comment[]
}

model Rental {
    rentalId    Int      @id @default(autoincrement())
    book        Book     @relation(fields: [bookId], references: [bookId])
    bookId      Int
    user        User     @relation(fields: [userId], references: [userId])
    userId      Int
    rentDate    DateTime
    returnDate  DateTime?
    status      String
}

model Comment {
    commentId  Int      @id @default(autoincrement())
    book       Book     @relation(fields: [bookId], references: [bookId])
    bookId     Int
    user       User     @relation(fields: [userId], references: [userId])
    userId     Int
    comment    String
    datePosted DateTime @default(now())
}
